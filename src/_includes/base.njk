<html lang="en">
<head>
  {% include 'head.njk' %}
</head>
<body>
    {% include 'header.njk' %}
  <main>
    <div class="container">
      {{ content | safe }}
    </div>
  </main>
    {% include 'footer.njk' %}

  <script>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", user => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }
  Prism.highlightAll();
</script>
</body>
